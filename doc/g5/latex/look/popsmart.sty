% A numbered chapter.
\def\@makechapterhead#1{%
\vspace*{-60\p@}           %Placering af chapter fra toppen af papiret
\parbox[t][5cm]{\textwidth}{                            %new
  \vspace*{25\p@}              %hvor tæt chapter incl. streger skal være på indledningen til kapitlet.
  \rule{\textwidth}{1mm}
  \par\nobreak
  \vspace*{-22\p@}
  \parbox[t][3.7cm][c]{9.4cm}{\huge \mdseries \raggedright #1}
  \hfill
  \vspace*{-98\p@}
  {\parindent \z@ \raggedright \normalfont
    \ifnum \c@secnumdepth >\m@ne
        \begin{flushright}
                \fontsize{100pt}{0pt}
                \mdseries
                \rmfamily
%               \@chapapp\space
                \thechapter
        \end{flushright}
   \fi
   \interlinepenalty\@M
   \par\nobreak
   \vspace{-10\p@} %mellemrum mellem stregerne i chapter
   \par\nobreak
   \rule{\textwidth}{1mm}
   \par\nobreak
   \vspace{30\p@}
  }}
}

