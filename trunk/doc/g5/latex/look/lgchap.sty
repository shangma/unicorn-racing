% A numbered chapter.

\def\@makechapterhead#1{\vspace*{-20pt}%
   {\parindent 0pt
    \ifnum \c@secnumdepth >\m@ne
       \hfill \fontfamily{pbk}\fontseries{m}\fontshape{n}\fontsize{1in}{0in}%
          \selectfont
       \special{ps: .8 setgray}\thechapter \special{ps: 0 setgray}\par 
       \vskip -1in
    \fi
    \@makechapterhead@help #1\hfilneg\par 
    \nobreak \vskip 40pt\relax
   }}

% An unnumbered chapter (\chapter*{...})

\def\@makeschapterhead#1{\vspace*{15pt}%
   {\parindent 0pt
    \@makechapterhead@help #1\hfilneg\par 
    \nobreak \vskip 40pt\relax
   }}
